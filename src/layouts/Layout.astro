---
import '@fontsource-variable/onest';

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body class="relative">
    <div
      class="absolute top-0 bottom-0 z-[-2] min-h-screen w-full bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"
    >
    </div>
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    color-scheme: light dark;
  }

  html {
    font-family: 'Onest Variable', system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  body {
    @apply bg-slate-300 text-slate-100/95;
    /* background: #050505; */
    display: flex;
    flex-direction: column;
    min-height: 100vh;
    /* color: #fdfdfd; */
  }
  input {
    @apply px-2;
  }
  input:focus {
    box-shadow: none;
    outline: none;
  }
  input:focus + label,
  input:not(:placeholder-shown) + label {
    @apply -top-3 text-white/60;
  }
  textarea {
    @apply px-2;
  }
  textarea:focus {
    box-shadow: none;
    outline: none;
  }

  textarea:focus,
  textarea:not(:placeholder-shown) {
    @apply h-32;
  }
  textarea:focus + label,
  textarea:not(:placeholder-shown) + label {
    @apply -top-3 left-2 translate-y-[-50%] text-white/60;
  }

  @media (prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }
</style>
